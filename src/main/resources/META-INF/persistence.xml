<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <!-- Nome da unidade de persistência (você usará este nome no código Java) -->
    <persistence-unit name="MeuPU" transaction-type="RESOURCE_LOCAL">

        <!-- Provedor de persistência -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Suas classes de entidade -->
        <!-- <class>modelo.Aluno</class> -->
        <!-- <class>modelo.Curso</class> -->
        <!-- adicione mais classes conforme necessário -->

        <properties>
            <!-- Configuração da conexão -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/meubanco?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Dialeto do Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- Geração automática do schema -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>

            <!-- Mostrar SQL no console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>

    </persistence-unit>
</persistence>


